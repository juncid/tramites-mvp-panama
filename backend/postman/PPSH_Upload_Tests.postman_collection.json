{
  "info": {
    "name": "PPSH - Upload Documents Tests",
    "description": "Colecci√≥n completa para testing del endpoint de subida de documentos PPSH",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "solicitud_id",
      "value": "123",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "‚úÖ 1. Upload Pasaporte PDF - Success",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 201\", function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "",
              "pm.test(\"Response has document ID\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('id_documento');",
              "    pm.environment.set('last_document_id', jsonData.id_documento);",
              "});",
              "",
              "pm.test(\"Document metadata is correct\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.nombre_archivo).to.include('.pdf');",
              "    pm.expect(jsonData.extension).to.eql('pdf');",
              "    pm.expect(jsonData.estado_verificacion).to.eql('PENDIENTE');",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "archivo",
              "type": "file",
              "src": "/C:/temp/test_pasaporte.pdf",
              "description": "Archivo PDF de prueba"
            },
            {
              "key": "cod_tipo_documento",
              "value": "3",
              "description": "3 = Pasaporte Notariado"
            },
            {
              "key": "observaciones",
              "value": "Pasaporte vigente del solicitante principal"
            }
          ]
        },
        "url": {
          "raw": "{{base_url}}/api/v1/ppsh/solicitudes/{{solicitud_id}}/documentos",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "ppsh", "solicitudes", "{{solicitud_id}}", "documentos"]
        }
      }
    },
    {
      "name": "‚úÖ 2. Upload Foto JPG - Custom Type",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 201\", function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "",
              "pm.test(\"Custom document type saved\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.tipo_documento_texto).to.eql('Fotograf√≠a Carnet Adicional');",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "archivo",
              "type": "file",
              "src": "/C:/temp/foto_carnet.jpg"
            },
            {
              "key": "tipo_documento_texto",
              "value": "Fotograf√≠a Carnet Adicional"
            },
            {
              "key": "observaciones",
              "value": "Fotograf√≠a adicional fondo blanco"
            }
          ]
        },
        "url": {
          "raw": "{{base_url}}/api/v1/ppsh/solicitudes/{{solicitud_id}}/documentos"
        }
      }
    },
    {
      "name": "‚ùå 3. Error - No File",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 422\", function () {",
              "    pm.response.to.have.status(422);",
              "});",
              "",
              "pm.test(\"Error mentions missing file\", function () {",
              "    var response = pm.response.text();",
              "    pm.expect(response).to.include('archivo');",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "cod_tipo_documento",
              "value": "1"
            },
            {
              "key": "observaciones",
              "value": "Test error sin archivo"
            }
          ]
        },
        "url": {
          "raw": "{{base_url}}/api/v1/ppsh/solicitudes/{{solicitud_id}}/documentos"
        }
      }
    },
    {
      "name": "‚ùå 4. Error - Solicitud Not Found",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 404\", function () {",
              "    pm.response.to.have.status(404);",
              "});",
              "",
              "pm.test(\"Error indicates not found\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.detail).to.include('no encontrada');",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "body": {
          "mode": "formdata", 
          "formdata": [
            {
              "key": "archivo",
              "type": "file",
              "src": "/C:/temp/test.pdf"
            },
            {
              "key": "cod_tipo_documento",
              "value": "1"
            }
          ]
        },
        "url": {
          "raw": "{{base_url}}/api/v1/ppsh/solicitudes/99999/documentos"
        }
      }
    },
    {
      "name": "üîç 5. Verify Document",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Document is verified\", function () {",
              "    var jsonData = pm.response.json();", 
              "    pm.expect(jsonData.estado_verificacion).to.eql('VERIFICADO');",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "PATCH",
        "url": {
          "raw": "{{base_url}}/api/v1/ppsh/documentos/{{last_document_id}}/verificar?estado=VERIFICADO&observaciones=Documento v√°lido y completo"
        }
      }
    },
    {
      "name": "üìã 6. Get Document Types",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Returns document types array\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.be.an('array');",
              "    pm.expect(jsonData.length).to.be.above(0);",
              "});",
              "",
              "pm.test(\"Document types have required fields\", function () {",
              "    var jsonData = pm.response.json();",
              "    var firstType = jsonData[0];",
              "    pm.expect(firstType).to.have.property('cod_tipo_doc');",
              "    pm.expect(firstType).to.have.property('nombre_tipo');",
              "    pm.expect(firstType).to.have.property('categoria');",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/api/v1/ppsh/catalogos/tipos-documento"
        }
      }
    }
  ]
}